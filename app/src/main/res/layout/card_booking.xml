<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="215dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@android:color/white">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tes"
                android:scaleType="fitXY"
                android:id="@+id/img_detail_full"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#CCffffff"
                android:layout_alignParentBottom="true"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stadium Somay"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/txt_nama_tempat_detail"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jalan Cisitu gang V jalan jalan"
                    android:layout_below="@+id/txt_nama_tempat_detail"
                    android:id="@+id/txt_alamat_detail"
                    android:layout_alignLeft="@+id/txt_nama_tempat_detail"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08.00 - 09.00"
                    android:id="@+id/txt_jam_detail"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:layout_below="@+id/txt_alamat_detail"
                    android:layout_marginTop="5dp"
                    android:layout_alignLeft="@+id/txt_alamat_detail"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 30.000 - 50.000/hour"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    android:layout_alignTop="@+id/txt_jam_detail"
                    android:id="@+id/txt_harga_detail"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>
        </RelativeLayout>
        
        
    </android.support.v7.widget.CardView>

</LinearLayout>